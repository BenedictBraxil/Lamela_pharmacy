<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Pharmacy" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >@color/Red</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Pharmacy.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Pharmacy.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Pharmacy.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="spash_screen"
        parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/services</item>
        <item name="android:statusBarColor">#fdfdfd</item>
        <item name="android:navigationBarColor">#fdfdfd</item>
    </style>
</resources>